{
  "name": "Gleam Development Environment (Latest)",
  // Use the ":latest" tag to pull the most recent build of the Elixir image.
  "image": "mcr.microsoft.com/devcontainers/elixir:latest",

  // Use a "feature" to add the latest v1 release of the Gleam compiler.
  "features": {
    "ghcr.io/gleam-lang/devcontainer-feature/gleam:1": {}
  },

  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "[gleam]": {
          "editor.defaultFormatter": "gleam.gleam"
        }
      },
      "extensions": [
        "gleam.gleam",
        "github.copilot",
        "github.copilot-chat"
      ]
    }
  },

  // This command runs after the container is created and all features are installed.
  "postCreateCommand": "gleam deps download",

  "forwardPorts": [4000]
}
