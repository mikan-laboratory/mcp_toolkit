{
  "name": "Gleam Development Environment",
  "image": "erlang:27-alpine",
  "features": {
    "ghcr.io/gleam-lang/devcontainer-feature/gleam:1": {}
  },
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "[gleam]": {
          "editor.defaultFormatter": "gleam.gleam"
        }
      },
      "extensions": [
        "gleam.gleam",
        "github.copilot",
        "github.copilot-chat"
      ]
    }
  },
  "forwardPorts": [4000],
  "postCreateCommand": "gleam deps download"
}
